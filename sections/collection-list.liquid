<div data-section-id="{{ section.id }}" data-section-type="collections-list-template">
  <hr>
  <div class="section-header">
    <h1 class="h2  section-header--left">{{ 'homepage.featured_collections.heading' | t }}</h1>
    <div class="section-header--right">
      <!--<a href="{{ routes.collections_url }}">{{ 'homepage.featured_collections.more_categories' | t }} &rsaquo;</a>-->
    </div>
  </div>
  <div class="grid-uniform text-center">

    {%- assign index = 0 -%}
    {%- assign index = section.blocks.size -%}

    {% case index %}
      {% when 1 %}
        {%- assign featured_collection_width = 'one-whole' -%}
        {%- assign featured_collection_size = '1024x' -%}
        {%- assign width = '1000' %}
        {%- assign height = '1000' %}
      {% when 2 %}
        {%- assign featured_collection_width = 'small--one-whole one-half' -%}
        {%- assign featured_collection_size = '540x' -%}
        {%- assign width = '480' %}
        {%- assign height = '480' %}
      {% when 3 %}
        {%- assign featured_collection_width = 'small--one-whole one-third' -%}
        {%- assign featured_collection_size = '345x' -%}
        {%- assign width = '310' -%}
        {%- assign height = '310' -%}
      {% when 4 %}
        {%- assign featured_collection_width = 'small--one-whole one-quarter' -%}
        {%- assign featured_collection_size = '250x' -%}
        {%- assign width = '225' -%}
        {%- assign height = '225' -%}
      {% when 5 %}
        {%- assign featured_collection_width = 'small--one-whole medium--one-third large--one-fifth' -%}
        {%- assign featured_collection_size = '195x' -%}
        {%- assign width = '175' -%}
        {%- assign height = '175' -%}
      {% when 6 %}
        {%- assign featured_collection_width = 'small--one-whole medium--one-third large--one-sixth' -%}
        {%- assign featured_collection_size = '195x' -%}
        {%- assign width = '140' -%}
        {%- assign height = '140' -%}
      {% when 7 %}
        {%- assign featured_collection_width = 'small--one-whole one-quarter' -%}
        {%- assign featured_collection_size = '250x' -%}
        {%- assign width = '225' -%}
        {%- assign height = '225' -%}
      {% when 8 %}
        {%- assign featured_collection_width = 'small--one-whole one-quarter' -%}
        {%- assign featured_collection_size = '250x' -%}
        {%- assign width = '225' -%}
        {%- assign height = '225' -%}
      {% when 9 %}
        {%- assign featured_collection_width = 'small--one-whole medium--one-third large--one-fifth' -%}
        {%- assign featured_collection_size = '195x' -%}
        {%- assign width = '175' -%}
        {%- assign height = '175' -%}
      {% when 10 %}
        {%- assign featured_collection_width = 'small--one-whole medium--one-third large--one-fifth' -%}
        {%- assign featured_collection_size = '195x' -%}
        {%- assign width = '175' -%}
        {%- assign height = '175' -%}
      {% when 11 %}
        {%- assign featured_collection_width = 'small--one-whole medium--one-third large--one-sixth' -%}
        {%- assign featured_collection_size = '195x' -%}
        {%- assign width = '140' -%}
        {%- assign height = '140' -%}
      {% when 12 %}
        {%- assign featured_collection_width = 'small--one-whole medium--one-third large--one-sixth' -%}
        {%- assign featured_collection_size = '195x' -%}
        {%- assign width = '140' -%}
        {%- assign height = '140' -%}
      {% when 13 %}
        {%- assign featured_collection_width = 'small--one-whole medium--one-third large--one-fifth' -%}
        {%- assign featured_collection_size = '195x' -%}
        {%- assign width = '175' -%}
        {%- assign height = '175' -%}
      {% when 14 %}
        {%- assign featured_collection_width = 'small--one-whole medium--one-third large--one-fifth' -%}
